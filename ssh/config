Host *
  # IPv4 only for speed
  AddressFamily inet
  Compression yes
  ControlMaster auto
  ControlPath /tmp/ssh_mux_%h_%p_%r
  ControlPersist 10m
  # send a keep-alive after 30s of inactivity
  ServerAliveInterval 30

Host github.com
    HostName github.com
    User git
    IdentityFile ~/.ssh/id_ed25519
    IdentitiesOnly yes
    AddKeysToAgent yes
    UseKeychain yes

